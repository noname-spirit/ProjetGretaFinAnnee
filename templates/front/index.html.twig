{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div>
		<div class="position-relative">
			<img src="{{ asset('comptabilite-entrepreneuriale-femme-afro-americaine-ar-169-style-brut-id-emploi-f486981b168f4ae8914e28ea59_343960-107166.jpg') }}" class="img-fluid w-100 vh-100 object-fit-cover" alt="Comptabilité entrepreneuriale - Femme afro-américaine">

			<div class="container position-absolute top-50 start-50 translate-middle text-white text-center">
				<h1 class="fw-bold">
					Simplifiez votre vie administrative<br>avec Class Papiers
				</h1>
				<p class="mt-3">
					Confiez-nous vos tracas administratifs et retrouvez la tranquillité d’esprit.<br>
					Chez Class Papiers, nous sommes là pour vous aider à gérer<br>
					vos documents et démarches en toute simplicité.
				</p>

				<svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-arrow-down-circle" viewbox="0 0 16 16">
					<path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z"/>
				</svg>
			</div>
		</div>

		<div></div>

		<div class="text-center" id="APropos">
			<div class="row">
				<div class="col">
					<img src="{{ asset('comptabilite-entrepreneuriale-femme-afro-americaine-ar-169-style-brut-id-emploi-f486981b168f4ae8914e28ea59_343960-107166.jpg') }}" class="img-fluid w-100 object-fit-cover" alt="Comptabilité entrepreneuriale - Femme afro-américaine">
				</div>
				<div class="col pr-5 mt-5 text-start">
					<h3>À propos</h3>
					<p>
						Lorem Ipsum is simply dummy text of the printing and typesetting industry...
					</p>
					<button type="button" class="rounded-pill">Lire plus</button>
				</div>
			</div>

			<div class="row" id="QuiSuisJe">
				<div class="col ps-5 mt-5 text-start">
					<h3>Qui suis-je</h3>
					<p>
						Lorem Ipsum is simply dummy text of the printing and typesetting industry...
					</p>
					<button type="button" class="rounded-pill">Lire plus</button>
				</div>
				<div class="col">
					<img src="{{ asset('comptabilite-entrepreneuriale-femme-afro-americaine-ar-169-style-brut-id-emploi-f486981b168f4ae8914e28ea59_343960-107166.jpg') }}" class="img-fluid w-100 object-fit-cover" alt="Comptabilité entrepreneuriale - Femme afro-américaine">
				</div>
			</div>
		</div>

		{# ----------- Services ----------- #}
		<div class="container mt-5" id="Services">
			<h4 class="text-center">Nos Services</h4>
			<div class="row justify-content-center row-cols-1 row-cols-md-2 g-4 mt-4">
				{% for i in 1..6 %}
					<div class="col d-flex justify-content-center">
						<div class="border p-3 rounded h-100" style="max-width: 400px;">
							<h5 class="text-center">Service
								{{ i }}</h5>
							<p class="text-center">Description du service numéro
								{{ i }}...</p>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="d-flex justify-content-center mt-4">
				<a href="#contact" class="btn btn-primary m-2">Contact</a>
				<a href="#contact" class="btn btn-outline-primary m-2">Demander un devis</a>
			</div>
		</div>

		{# ----------- Tarifs ----------- #}
		<div class="container mt-5 mb-5" id="Tarifs">
			<div class="row mb-4 text-center">
				<h2 class="fs-2 fw-bold">LE MEILLEUR PLAN QUE NOUS PROPOSONS</h2>
			</div>

			<div class="row justify-content-center g-4">
				{% set plans = [
                    {'title': 'Essentielle', 'price': '250€', 'features': ['Gestion des e-mails', 'Rendez-vous', 'Suivi administratif', 'Classement numérique']},
                    {'title': 'Avancé', 'price': '390€', 'features': ['Tout du plan Essentielle', 'Relances', 'Préparation comptable', 'Tableaux de bord']},
                    {'title': 'Premium', 'price': '590€', 'features': ['Tout du plan Avancé', 'Interface client', 'Reporting mensuel', 'Urgences prioritaires']}
                ] %}
				{% for plan in plans %}
					<div class="col-md-6 col-lg-4 d-flex justify-content-center">
						<div class="card shadow-sm rounded-4 h-100" style="max-width: 400px;">
							<div class="card-body d-flex flex-column p-4">
								<h3 class="h5 fw-bold mb-3 text-uppercase text-center">{{ plan.title }}</h3>
								<div class="mb-4 text-center">
									<span class="h4 fw-bold">{{ plan.price }}</span>
									<span class="text-muted">/ mois</span>
								</div>
								<ul class="list-unstyled mb-4">
									{% for f in plan.features %}
										<li>✔
											{{ f }}</li>
									{% endfor %}
								</ul>
								<a href="#contact" class="btn btn-outline-primary mt-auto rounded-pill">Contact</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		{# ----------- Newsletter / Call to Action ----------- #}
		<section class="cta-section position-relative text-white py-5" style="background-image: url('{{ asset('comptabilite-entrepreneuriale-femme-afro-americaine-ar-169-style-brut-id-emploi-f486981b168f4ae8914e28ea59_343960-107166.jpg') }}'); background-size: cover; background-position: center;">
			<div class="container text-center">
				<h2 class="fw-bold">Rejoignez notre newsletter</h2>
				<p>Recevez nos conseils et actualités pour gérer vos papiers en toute sérénité.</p>
				<form class="row justify-content-center mt-3">
					<div class="col-md-6">
						<input type="email" class="form-control rounded-pill" placeholder="Votre adresse e-mail" aria-label="Votre adresse e-mail">
					</div>
					<div class="col-md-2 mt-2 mt-md-0">
						<button type="submit" class="btn btn-light rounded-pill w-100">S’inscrire</button>
					</div>
				</form>
			</div>
		</section>

		{# ----------- Blog ----------- #}
		<div class="container mt-5 mb-5" id="Blog">
			<h4 class="text-center mb-4">Derniers articles</h4>
			<div class="row row-cols-1 row-cols-md-3 g-4">
				{% for article_blog in articles %}
					<div class="col d-flex">
						<div class="card shadow-sm h-100 w-100">
							{% if article_blog.imageAsBase64 %}
								{# Use the new method #}
								{# 
																																																								                           Ideally, you would also store and use the MIME type.
																																																								                           For example, if you had article_blog.imageMimeType:
																																																								                           <img src="data:{{ article_blog.imageMimeType }};base64,{{ article_blog.imageAsBase64 }}" class="card-img-top" alt="{{ article_blog.title }}">
																																																								                           
																																																								                           For now, assuming JPEG/PNG as in your original code:
																																																								                        #}
								<img src="data:image/jpeg;base64,{{ article_blog.imageAsBase64 }}" class="card-img-top" alt="{{ article_blog.title|default('Article Image') }}">
							{% else %}
								{# Make sure this path is correct and the asset exists #}
								<img src="{{ asset('images/default-article.png') }}" class="card-img-top" alt="Image par défaut">
							{% endif %}
							<div
								class="card-body d-flex flex-column">
								{# Assuming your entity properties are title and subTitle #}
								<h5 class="card-title">{{ article_blog.title }}</h5>
								<p class="card-text">{{ article_blog.subTitle }}</p>
								<a href="{{ path('blog_show', {'id': article_blog.id}) }}" class="btn btn-outline-primary mt-auto rounded-pill">Lire l'article</a>
							</div>
						</div>
					</div>
				{% else %}
					<p class="text-center">Aucun article disponible.</p>
				{% endfor %}
			</div>
		</div>
		{# The extra </div> tag you mentioned was not present in the snippet you provided to correct, 
														   but if it was there before this block, ensure your HTML structure is valid. #}
	{% endblock %}
