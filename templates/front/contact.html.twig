{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	<div class="container my-5">
		<div class="row g-5 align-items-center">
			<div class="col-md-6">
				<h2>Get matched with the perfect freelancer for your design project</h2>
				<form method="post" action="{{ path('contact_send') }}">
					<div class="row">
						<div class="col">
							<input type="text" name="first_name" class="form-control" placeholder="First name" required>
						</div>
						<div class="col">
							<input type="text" name="last_name" class="form-control" placeholder="Last name" required>
						</div>
					</div>
					<div class="mt-3">
						<input type="email" name="email" class="form-control" placeholder="Your email address" required>
					</div>
					<div class="mt-3">
						<input type="tel" name="phone" class="form-control" placeholder="Phone number">
					</div>
					<div class="mt-3">
						<textarea name="comments" class="form-control" placeholder="Additional details..." rows="4"></textarea>
					</div>
					<div class="mt-3">
						<label class="form-check">
							<input class="form-check-input" type="checkbox" name="services[]" value="Website design">
							Salarier
						</label>
						<label class="form-check">
							<input class="form-check-input" type="checkbox" name="services[]" value="UI/UX design">
							Entrepreneur
						</label>
						<label class="form-check">
							<input class="form-check-input" type="checkbox" name="services[]" value="App design">
							Etudiant
						</label>
						<label class="form-check">
							<input class="form-check-input" type="checkbox" name="services[]" value="Content creation">
							Autre
						</label>

					</div>
					<button type="submit" class="btn btn-dark mt-4">Get matched</button>
				</form>
				<p class="mt-2 small">Prefer email?
					<a href="mailto:[mail client pro]">[mail client pro]</a>
				</p>
			</div>
			<div class="col-md-6 text-center">
				<img src="{{ asset('img/teamWork.jpg') }}" alt="Design team" class="img-fluid rounded shadow">
				<p class="mt-3">Access our global talent network with
					<strong>100,000+ world-class designers.</strong>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
