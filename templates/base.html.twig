		<script>
			document.addEventListener('DOMContentLoaded', function () {
const pricingToggle = document.getElementById('pricingToggle');
const toggleLabel = document.getElementById('toggleLabel');
// Cible plus précisément les cartes de plan qui ont les data-attributes requis
const planCards = document.querySelectorAll('.plan-card[data-price-monthly][data-price-annual]');

if (pricingToggle && toggleLabel && planCards.length > 0) {
pricingToggle.addEventListener('change', function () {
const isAnnual = this.checked;

if (isAnnual) {
toggleLabel.textContent = 'Passer au tarif Mensuel';
} else {
toggleLabel.textContent = 'Passer au tarif Annuel (Économisez ~15%)';
} planCards.forEach(card => {
const priceElement = card.querySelector('.plan-price');
const periodElement = card.querySelector('.plan-period');
const monthlyPrice = card.dataset.priceMonthly;
const annualPrice = card.dataset.priceAnnual;

// Vérifie que les éléments internes price et period existent avant de les manipuler
if (priceElement && periodElement) {
if (isAnnual) {
priceElement.textContent = annualPrice;
periodElement.textContent = '/ an';
} else {
priceElement.textContent = monthlyPrice;
periodElement.textContent = '/ mois';
}
}
});
});
} else { // Optionnel: Log pour débogage si des éléments manquent
if (! pricingToggle) 
console.warn('Element with ID "pricingToggle" not found.');



if (! toggleLabel) 
console.warn('Element with ID "toggleLabel" not found.');



if (planCards.length === 0) 
console.warn('No elements with class "plan-card" and data attributes found.');



}
});
		</script>
