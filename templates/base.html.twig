		<script>
			document.addEventListener("DOMContentLoaded", function () {
const animatedElements = document.querySelectorAll('.animate-on-scroll');

if ("IntersectionObserver" in window) { // Options pour l'observer: seuil de 10% de visibilité
let observerOptions = {
root: null, // par rapport au viewport
rootMargin: '0px',
threshold: 0.1 // 10% de l'élément doit être visible
};

const observer = new IntersectionObserver((entries, observerInstance) => {
entries.forEach(entry => {
if (entry.isIntersecting) {
entry.target.classList.add('is-visible');
observerInstance.unobserve(entry.target); // Arrêter d'observer une fois animé
}
});
}, observerOptions);

animatedElements.forEach(el => {
observer.observe(el);
});
} else {
// Fallback pour les navigateurs qui ne supportent pas IntersectionObserver
// Affiche simplement tous les éléments
animatedElements.forEach(el => {
el.classList.add('is-visible');
});
}
});
		</script>

		{# ______toogle script___________ #}
		<script>
			document.addEventListener('DOMContentLoaded', function () {
const pricingToggle = document.getElementById('pricingToggle');
const toggleLabel = document.getElementById('toggleLabel');
const planCards = document.querySelectorAll('.plan-card');

pricingToggle.addEventListener('change', function () {
const isAnnual = this.checked; // true si coché (annuel), false sinon (mensuel)

planCards.forEach(card => {
const priceDisplay = card.querySelector('.plan-price');
const periodDisplay = card.querySelector('.plan-period');

const monthlyPrice = card.dataset.priceMonthly; // Récupère depuis data-price-monthly
const annualPrice = card.dataset.priceAnnual; // Récupère depuis data-price-annual

if (isAnnual) {
priceDisplay.textContent = annualPrice;
periodDisplay.textContent = '/ an';
} else {
priceDisplay.textContent = monthlyPrice;
periodDisplay.textContent = '/ mois';
}
});

if (isAnnual) {
toggleLabel.textContent = 'Passer au tarif Mensuel';
} else {
toggleLabel.textContent = 'Passer au tarif Annuel (Économisez ~15%)';
}
});
});
